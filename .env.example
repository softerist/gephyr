# Gephyr API key used by console scripts and API auth for /healthz, /v1, /api.
GEPHYR_API_KEY=gph_your_api_key_here

# Runtime API key aliases (use when running without console.ps1 wrappers).
# ABV_API_KEY: alias consumed by runtime config loader.
ABV_API_KEY=
# API_KEY: legacy alias consumed by runtime config loader.
API_KEY=

# Google OAuth client credentials used by login/account-link flow.
# Accepted aliases in code:
# - client id: GEPHYR_GOOGLE_OAUTH_CLIENT_ID, ABV_GOOGLE_OAUTH_CLIENT_ID, GOOGLE_OAUTH_CLIENT_ID
# - client secret: GEPHYR_GOOGLE_OAUTH_CLIENT_SECRET, ABV_GOOGLE_OAUTH_CLIENT_SECRET, GOOGLE_OAUTH_CLIENT_SECRET
# OAuth client id for Google auth.
GEPHYR_GOOGLE_OAUTH_CLIENT_ID=your_client_id.apps.googleusercontent.com
# OAuth client secret for Google auth.
GEPHYR_GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-your_client_secret
# ABV_ALLOWED_GOOGLE_DOMAINS: optional Workspace domain allowlist for identity verification.
# Comma-separated list (e.g. "example.com,subsidiary.example.com").
# Leave empty to allow all domains.
ABV_ALLOWED_GOOGLE_DOMAINS=

# Security and network behavior.
# ABV_AUTH_MODE: auth mode for API key enforcement (strict/off).
ABV_AUTH_MODE=strict
# ABV_ALLOW_LAN_ACCESS: false binds localhost only; true binds 0.0.0.0.
ABV_ALLOW_LAN_ACCESS=false
# ABV_ENABLE_ADMIN_API: true enables /api admin endpoints.
ABV_ENABLE_ADMIN_API=false
# ABV_WEB_PASSWORD: optional web UI/admin password alias.
ABV_WEB_PASSWORD=
# WEB_PASSWORD: legacy web password alias.
WEB_PASSWORD=

# Data and routing.
# ABV_DATA_DIR: optional override for runtime data directory.
ABV_DATA_DIR=
# ABV_PUBLIC_URL: external base URL used for OAuth callback generation behind proxy.
ABV_PUBLIC_URL=
# ABV_MAX_BODY_SIZE: max request body size in bytes (default 100MB).
ABV_MAX_BODY_SIZE=104857600

# Encryption and shutdown controls.
# ABV_ENCRYPTION_KEY: stable high-entropy secret used for token encryption (required in many containers).
ABV_ENCRYPTION_KEY=
# ABV_SHUTDOWN_DRAIN_TIMEOUT_SECS: graceful shutdown drain timeout for in-flight requests.
ABV_SHUTDOWN_DRAIN_TIMEOUT_SECS=10
# ABV_ADMIN_STOP_SHUTDOWN: true allows admin stop endpoint to trigger process shutdown.
ABV_ADMIN_STOP_SHUTDOWN=false

# Scheduler timing hardening.
# ABV_SCHEDULER_REFRESH_JITTER_MIN_SECONDS / MAX_SECONDS:
# Adds randomized delay before each scheduled quota-refresh batch (default range: 30..120).
# Keep min <= max.
ABV_SCHEDULER_REFRESH_JITTER_MIN_SECONDS=30
ABV_SCHEDULER_REFRESH_JITTER_MAX_SECONDS=120

# Proxy-pool one-IP isolation knobs are config/API settings (not env vars):
# - proxy.proxy_pool.allow_shared_proxy_fallback
# - proxy.proxy_pool.require_proxy_for_account_requests
